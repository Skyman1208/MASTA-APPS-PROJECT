<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".navigation.menuNav.about.AboutFragment">

    <TextView
        android:id="@+id/txt_tittleAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:justificationMode="inter_word"
        android:text="MALAYSIA STEM TEACHER ASSOCIATION \nMASTA Apps"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/txt_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_tittleAbout"
        android:layout_marginTop="35dp"
        android:justificationMode="inter_word"
        android:text="@string/about_apps"
        android:textColor="#000000"
        android:textSize="14dp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>