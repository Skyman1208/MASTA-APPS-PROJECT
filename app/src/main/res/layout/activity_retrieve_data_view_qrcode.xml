<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bg_view_qrcode"
    android:background="@drawable/gradient_animation"
    tools:context=".navigation.menuNav.home.subject.retrieveNDisplayData.ViewQrCode">

    <ImageView
        android:id="@+id/iv_displayQrCode"
        android:layout_width="323dp"
        android:layout_height="305dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp"
        app:srcCompat="@drawable/qrcode"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/detailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_displayQrCode"
        android:layout_marginTop="34dp"
        android:text="QR code details"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>