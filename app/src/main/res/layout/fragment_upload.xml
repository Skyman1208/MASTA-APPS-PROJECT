<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navigation.menuNav.uploadData.UploadFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="30dp">

        <LinearLayout
            android:id="@+id/TittleLink_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_tittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tittle"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/et_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="URL link"
                android:textAlignment="center"
                android:layout_marginTop="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_image_layout"
            android:layout_width="wrap_content"
            android:layout_height="450dp"
            android:layout_below="@+id/TittleLink_Layout"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/iv_upload_image"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:src="@drawable/addimage"
                android:layout_gravity="center"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/label_progress_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_image_layout"
            android:orientation="vertical"
            android:gravity="center">

            <ProgressBar
                android:id="@+id/pb_upload_image"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="@+id/label_progress_layout"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp">

                <TextView
                    android:id="@+id/tv_fileSizeInByte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/0 KB"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/tv_fileSizeInPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:text="0%" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_upload"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:text="Upload"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>

