<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bg_splash_screen"
    android:background="@drawable/gradient_animation"
    android:layout_centerHorizontal="true"
    tools:context="com.example.up.SplashScreen">

    <LinearLayout
        android:id="@+id/bg_circle_MASTA"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:background="@drawable/bg_circle"
        android:elevation="5dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_MASTALogin"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:elevation="5dp"
            android:src="@drawable/masta" />
    </LinearLayout>

    <TextView
        android:id="@+id/MASTA_tittle_splashScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bg_circle_MASTA"
        android:layout_marginTop="30dp"
        android:text="MALAYSIA STEM TEACHER\nASSOCIATION"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MASTA Educational Resources"
        android:textSize="16dp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/MASTA_tittle_splashScreen"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>